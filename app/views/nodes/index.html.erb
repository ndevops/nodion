<h1>Nodes</h1>

<table class="table nodes">
  <thead>
    <tr>
      <th width="5%"></th>
      <th width="40%">Hostname</th>
      <th width="20%">IPv4</th>
      <th width="20%">Created</th>
      <th width="15%"></th>
    </tr>
  </thead>
  <tbody>
    <% @nodes.each do |node| %>
    <tr>
      <td><%= node.image.name %></td>
      <td class="node-name">
        <%= link_to node.hostname, node_path(node) %>
        <small><%= node.plan.ram %> / <%= node.plan.storage %> <%= node.plan.storage_type %> / <%= node.region.name %> / <%= node.image.name %></small>
      </td>
      <td><% if node.ips.any? %><%= node.ips.first.value %><% end %></td>
      <td><%= distance_of_time_in_words(Time.now,node.created_at) %> ago</td>
      <td><%= link_to "Manage", node_path(node), :class => 'button button-green button-small' %> <%= link_to 'Delete', node_path(node), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button button-red button-small' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
